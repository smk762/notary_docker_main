version: '3.7'

x-zcash-params-volume:
  &zcash-params
  type: bind
  source: /home/USERNAME/.zcash-params
  target: /home/komodian/.zcash-params

services:
  ltc:
    env_file:
      - .env
    build:
      context: ./docker_files
      dockerfile: Dockerfile.LTC
      args:
        - USER_ID=$USER_ID
        - GROUP_ID=$GROUP_ID
        - COMMIT_HASH=0.16
    ports:
      - "9332:9332"
      - "127.0.0.1:9333:9333"
    volumes:
      - /home/USERNAME/.litecoin:/home/komodian/.litecoin
    container_name: ltc
    shm_size: '2gb'
    restart: always
    stop_grace_period: 15s
    logging:
      driver: "json-file"
      options:
        max-size: "20m"
        max-file: "10"
    command: ["/run_LTC.sh"]

